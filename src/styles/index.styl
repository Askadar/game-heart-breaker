body
	margin 0
	background #011D27
	font-family Comfortaa
	color #F1F3F9

h1#title
	font-size 28px
	font-weight bold
	padding 16px 12px
	line-height 1
	box-sizing border-box
	margin 0
	display flex

#score
	margin-left auto
	margin-right .75rem

.info-container
	display flex
	justify-content center
	align-items center
	position fixed
	left 0
	top 0
	bottom 0
	right 0
	visibility hidden

	&.hidden
		display none

	.info
		visibility visible
		background #193541
		max-width 680px
		font-size 18px
		padding 24px 32px
		box-sizing border-box
		border-radius 8px
		box-shadow 0 0 3px 1px #1F7A8C

		p
			margin 0
			margin-bottom 12px
		p:last-child
			margin 0
